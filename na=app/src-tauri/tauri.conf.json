{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "NA KASEM CRM",
  "version": "1.0.0",
  "identifier": "com.nakasem.crm",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": null
    },
    "shortDescription": "Professional CRM for electrical supplies management",
    "longDescription": "NA KASEM CRM - Complete solution for managing delivery notes, clients, products, and analytics. Secure, fast, and fully offline."
  },
  "app": {
    "windows": [
      {
        "title": "NA KASEM CRM",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:;"
    }
  },
  "plugins": {}
}